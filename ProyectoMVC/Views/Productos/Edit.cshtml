@model ProyectoMVC.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form method="post" asp-action="Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" class="form-control" id="Precio" name="Precio" value="@Model.Precio" required />
    </div>
    <div class="form-group">
        <label for="Cantidad">Cantidad</label>
        <input type="number" class="form-control" id="Cantidad" name="Cantidad" value="@Model.Cantidad" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
