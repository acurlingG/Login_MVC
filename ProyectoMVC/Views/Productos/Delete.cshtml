@model ProyectoMVC.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <p>¿Estás seguro de que deseas eliminar el producto "@Model.Nombre"? </p>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Productos")" class="btn btn-secondary">Cancelar</a>
</form>
